#include<stdio.h>
int main()
{
    int i,j,h=0,l=0,max;
    int a[3][4]={{1,2,3,4},{5,6,7,8},{9,0,10,11},{12,13,14,15}};
    max=a[0][0];
    for(i=0;i<=2;i++)
        for(j=0;j<=3;j++)
        if(a[i][j]>max)
    {
        max=a[i][j];
        h=i;
        l=j;
    }
    printf("max=%d\nh=%d\nl=%d\n",max,h,l);
    return 0;
}
